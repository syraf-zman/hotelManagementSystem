<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>com.hotel.controller.loginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>servlet Login</servlet-name>
        <servlet-class>com.hotel.controller.loginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginError</servlet-name>
        <servlet-class>com.hotel.view.loginError</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>bookingServlet</servlet-name>
        <servlet-class>com.hotel.controller.bookingServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logoutServlet</servlet-name>
        <servlet-class>com.hotel.controller.logoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>editbookingServlet</servlet-name>
        <servlet-class>com.hotel.controller.editbookingServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cancelbookingServlet</servlet-name>
        <servlet-class>com.hotel.controller.cancelbookingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginError</servlet-name>
        <url-pattern>/loginError</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>bookingServlet</servlet-name>
        <url-pattern>/booking.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logoutServlet</servlet-name>
        <url-pattern>/logout.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editbookingServlet</servlet-name>
        <url-pattern>/editbooking.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cancelbookingServlet</servlet-name>
        <url-pattern>/cancelbooking.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
